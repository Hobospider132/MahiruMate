<Window x:Class="MahiruMate.Fun.PongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Background="Black"
        Title="Pong" Width="600" Height="438">

    <Canvas x:Name="GameCanvas" Width="600" Height="400" Background="Black">
        <Rectangle x:Name="PlayerPaddle" Width="10" Height="80" Fill="White" HorizontalAlignment="Left" Canvas.Top="160" VerticalAlignment="Center" Canvas.Left="10"/>
        <Rectangle x:Name="AIPaddle" Width="10" Height="80" Fill="White" HorizontalAlignment="Left" Canvas.Left="580" VerticalAlignment="Center" Canvas.Top="160"/>
        <Rectangle x:Name="Ball" Width="10" Height="10" Fill="White" Canvas.Left="292" Canvas.Top="195" HorizontalAlignment="Left" VerticalAlignment="Center"/>


        <TextBlock x:Name="PlayerScore" FontSize="24" Foreground="White" Canvas.Left="279" Canvas.Top="10" Text="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock x:Name="Separator" FontSize="24" Foreground="White" Canvas.Left="297" Canvas.Top="10" Text=":" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock x:Name="AIScore" FontSize="24" Foreground="White" Canvas.Left="307" Canvas.Top="10" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Window>
